{
  "manifest_version": 3,
  "name": "文本助手 - 解释、翻译、朗读、润色",
  "version": "1.0.0",
  "description": "选中文本后提供解释、翻译、朗读和润色功能",
  "permissions": [
    "activeTab",
    "tts",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "文本助手 - 设置"
  },
  "host_permissions": [
    "https://api.moonshot.cn/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["config.js", "content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
